<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
                android:background="#000"
    tools:context="com.example.csc413_volley_template.DetailsActivity">



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/loader"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:layout_alignParentTop="true"
        android:id="@+id/imageView" />

    <TextView
        android:text="Event Title"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_below="@id/imageView"
        android:id="@+id/event_title"/>


    <TextView
        android:text="City View"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/event_title"
        android:id="@+id/city_view"
        />

    <TextView
        android:text="Group Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:id="@+id/group_title"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/city_view" />

    <TextView
        android:text="Members"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:id="@+id/members_number"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/group_title"  />


    <TextView
        android:text="Latitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:id="@+id/group_lat"
        android:layout_below="@id/group_title"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:text="Latitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:id="@+id/group_long"
        android:layout_below="@id/group_lat"
        android:layout_centerHorizontal="true"/>



    <Button android:id="@+id/btnShowLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Location"
            android:layout_below="@id/group_long"
            android:layout_centerHorizontal="true"/>


    <TextView
        android:text="Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:id="@+id/description"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btnShowLocation"/>



</RelativeLayout>
